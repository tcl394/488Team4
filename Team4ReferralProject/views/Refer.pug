extends layout_

block content
  .main.container
    .row
      h3(align='left')
        a(href="/dashboard")
          button.btn.btn-primary(type="button", value='Back to Dashboard', style='float: left;') Back to dashboard
      .col-md-6.col-md-offset-4
        img.wine(src='/images/white_wine.png', alt='white_wine', height='62', width='42')
        img.wine(src='/images/red_wine.png', alt='white_wine', height='62', width='42')
        img.wine(src='/images/wine_and_bottle.png', alt='white_wine', height='62', width='42') 
        img.wine(src='/images/red_wine_2.png', alt='white_wine', height='62', width='42')
        img.wine(src='/images/white_wine.png', alt='white_wine', height='62', width='42')
        img.wine(src='/images/red_wine.png', alt='white_wine', height='62', width='42')
      
      .col-md-6.col-md-offset-3
        h2 Customer Referral
        p Please complete the form to refer a customer to us!
        

        form(method='POST' action='/refer')
          div.form-group
            label(for='Firstname') Firstname
            input.form-control(type='text' id='firstname' placeholder='firstname' name='firstname')
          div.form-group
            label(for='Lastname') Lastname
            input.form-control(type='text' id='lastname' placeholder='lastname' name='lastname')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          button.btn.btn-primary(type='submit') Submit Referral
      .row
